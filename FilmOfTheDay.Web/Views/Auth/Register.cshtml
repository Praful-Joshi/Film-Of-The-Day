@model FilmOfTheDay.Web.Models.Auth.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4 auth-bg">
    <div class="bg-white bg-opacity-90 shadow-md rounded-lg p-8 max-w-md w-full">
        <h2 class="text-2xl font-bold text-center mb-6 text-brand-text-black">Create a New Account</h2>

        <form asp-action="Register" method="post" class="space-y-4">
            <div asp-validation-summary="All" class="text-danger text-sm"></div>

            <div class="flex flex-col">
                <label asp-for="Username" class="mb-1 text-brand-text-dark font-medium"></label>
                <input asp-for="Username" class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Username" class="text-danger text-sm mt-1"></span>
            </div>

            <div class="flex flex-col">
                <label asp-for="Email" class="mb-1 text-brand-text-dark font-medium"></label>
                <input asp-for="Email" class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-danger text-sm mt-1"></span>
            </div>

            <div class="flex flex-col">
                <label asp-for="Password" class="mb-1 text-brand-text-dark font-medium"></label>
                <input asp-for="Password" type="password" class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Password" class="text-danger text-sm mt-1"></span>
            </div>

            <div class="flex flex-col">
                <label asp-for="ConfirmPassword" class="mb-1 text-brand-text-dark font-medium"></label>
                <input asp-for="ConfirmPassword" type="password" class="border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="ConfirmPassword" class="text-danger text-sm mt-1"></span>
            </div>

            <button type="submit" class="w-full bg-brand-bg-blue text-brand-text-light font-semibold py-2 rounded hover:bg-brand-bg-blue-hover transition">
                Register
            </button>
        </form>

        <p class="text-center text-gray-600 mt-4">
            Already have an account? 
            <a asp-action="Login" class="text-blue-600 hover:underline">Login here</a>
        </p>
    </div>
</div>
