        <!-- Header -->
        <div class="flex items-center px-6 pt-2 pb-2.5">
            <a asp-controller="Profile" asp-action="Index" asp-route-id="@Model.UserID" class="font-semibold text-brand-text-light hover:underline">
                @Model.UserName
            </a>
        </div>

        <!-- Image -->
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="bg-brand-bg-dark text-center">
