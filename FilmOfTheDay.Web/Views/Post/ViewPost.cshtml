@model FilmOfTheDay.Web.Models.Post.ViewPostViewModel
@{
    ViewData["Title"] = "View Post";
}

<div class="pt-4">
    <div class="max-w-full sm:max-w-sm mx-auto bg-gray-800 overflow-hidden">
        <!-- Header -->
        <div class="flex items-center px-3 py-2">
            <a asp-controller="Profile" asp-action="Index" asp-route-id="@Model.UserID" class="font-semibold text-gray-300 hover:underline">
                @Model.UserName
            </a>
        </div>

        <!-- Image -->
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="bg-gray-800 text-center">
                <img src="@Model.ImageUrl" alt="Post Image"
                    class="w-full max-h-100 object-contain" />
            </div>
        }

        <!-- Actions -->
        <div class="flex items-center px-3 py-1 space-x-3 text-lg">
            <button class="hover:text-red-500">‚ù§Ô∏è</button>
            <button class="hover:text-blue-500">üí¨</button>
            <button class="ml-auto hover:text-yellow-500">üîñ</button>
        </div>

        <!-- Details -->
        <div class="px-3 py-2">
            <p class="text-gray-300"><strong>@Model.UserName</strong> @Model.Description</p>
            <div class="text-xs text-gray-400">@Model.CreatedAt.ToString("MMM dd, yyyy")</div>
        </div>
    </div>
</div>


