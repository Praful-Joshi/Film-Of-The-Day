@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmOfTheDay.Web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50 text-gray-900">

    <!-- Header / Navbar -->
    <header class="bg-white shadow-md">
        <nav class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                
                <!-- Brand -->
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-xl font-bold text-gray-800">
                    FilmOfTheDay
                </a>

                <!-- Authenticated Links -->
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <div class="flex items-center space-x-4">
                        <a asp-controller="Profile" asp-action="Index" class="px-3 py-2 rounded hover:bg-gray-100 transition">Profile</a>
                        <a asp-controller="Home" asp-action="Privacy" class="px-3 py-2 rounded hover:bg-gray-100 transition">Privacy</a>
                        <a asp-controller="Auth" asp-action="Logout" class="px-3 py-2 rounded hover:bg-gray-100 transition">Logout</a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="max-w-8xl">
        @RenderBody()
    </main>

    <!-- Floating Create Post Button -->
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <a asp-controller="Post" asp-action="Create"
           class="fixed bottom-8 left-1/2 -translate-x-1/2 w-16 h-16 flex items-center justify-center text-2xl text-white bg-blue-600 rounded-full shadow-lg hover:bg-blue-700 transition z-50">
            <span class="sr-only">Create Post</span>
            <i class="bi bi-plus"></i>
        </a>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
