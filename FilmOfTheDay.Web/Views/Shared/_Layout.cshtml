@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@{
    var ownerID = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmOfTheDay.Web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-gray-50 text-gray-900">

    <!-- Header / Navbar -->
    <header class="bg-white shadow-md">
        <nav class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">

                <div class= "flex items-center">
                    <!-- Brand -->
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-xl font-bold text-gray-800">
                        FilmOfTheDay
                    </a>
                </div>

                <div class="flex items-center space-x-4">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <!-- Search bar -->
                        <form asp-controller="Search" asp-action="Index" method="get"
                            class="flex items-center flex-1 mx-1 sm:mx-4 relative
                                    max-w-[160px] xs:max-w-[200px] sm:max-w-[300px] md:max-w-[400px] lg:max-w-[500px]">
                            <input type="text" name="query" placeholder="Search users..."
                                value="@Context.Request.Query["query"]"
                                class="w-full border border-gray-300 rounded-full py-2 pl-4 pr-10
                                        text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                autocomplete="off" />
                            <button type="submit"
                                    class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700">
                                <i class="bi bi-search text-lg"></i>
                            </button>
                        </form>

                        <!-- Notifications Button (always visible) -->
                        <a asp-controller="Notification" asp-action="Index"
                            class="ml-3 relative text-gray-600 hover:text-blue-600 transition flex items-center justify-center">
                            <i class="bi bi-bell text-2xl"></i>
                            @* <!-- Optional red dot for unread notifications -->
                            <span class="absolute top-1 right-1 block w-2 h-2 bg-red-500 rounded-full"></span> *@
                        </a>


                        <!-- Mobile menu button -->
                        <button id="nav-toggle"
                                class="md:hidden text-gray-700 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <i class="bi bi-list text-3xl"></i>
                        </button>

                        <!-- Desktop Menu -->
                        <div class="hidden md:flex items-center space-x-4">
                            <a asp-controller="Profile" asp-action="Index" asp-route-id="@ownerID" class="px-3 py-2 rounded hover:bg-gray-100 transition">Profile</a>
                            <a asp-controller="Home" asp-action="Privacy" class="px-3 py-2 rounded hover:bg-gray-100 transition">Privacy</a>
                            <a asp-controller="Auth" asp-action="Logout" class="px-3 py-2 rounded hover:bg-gray-100 transition">Logout</a>
                        </div>
                    }
                </div> 
            </div>


            <!-- Mobile Menu -->
            @if (User?.Identity?.IsAuthenticated ?? false)
            {
                <div id="nav-menu" class="hidden md:hidden flex items-center flex-col pb-3">
                    <a asp-controller="Profile" asp-action="Index" asp-route-id="@ownerID" class="block px-3 py-2 rounded hover:bg-gray-100 transition">Profile</a>
                    <a asp-controller="Home" asp-action="Privacy" class="block px-3 py-2 rounded hover:bg-gray-100 transition">Privacy</a>
                    <a asp-controller="Auth" asp-action="Logout" class="block px-3 py-2 rounded hover:bg-gray-100 transition">Logout</a>
                </div>
            }
        </nav>
    </header>


    <!-- Main Content -->
    <main class="max-w-8xl">
        @RenderBody()
    </main>

    <!-- Floating Create Post Button -->
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <a asp-controller="Post" asp-action="Create"
           class="fixed bottom-8 left-1/2 -translate-x-1/2 w-16 h-16 flex items-center justify-center text-2xl text-white bg-blue-600 rounded-full shadow-lg hover:bg-blue-700 transition z-50">
            <span class="sr-only">Create Post</span>
            <i class="bi bi-plus"></i>
        </a>
    }

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        const toggleButton = document.getElementById('nav-toggle');
        const navMenu = document.getElementById('nav-menu');

        toggleButton?.addEventListener('click', () => {
            navMenu.classList.toggle('hidden');
        });
    </script>

</body>
</html>
