@model FilmOfTheDay.Web.Models.Post.ConfirmPopupViewModel

<div id="@Model.PopupId"
     class="fixed inset-0 flex items-center justify-center backdrop-blur-sm z-50 hidden transition-opacity duration-300">
    <div class="bg-brand-dark rounded-2xl shadow-xl p-6 max-w-sm w-full mx-4 text-center transform scale-95 opacity-0 transition-all duration-200">
        <h3 class="text-lg font-semibold text-brand-light mb-4">@Model.Title</h3>
        <p class="text-sm text-brand-light mb-6">@Model.Message</p>

        <div class="flex justify-center gap-4">
            <button type="button"
                    class="cancel-popup px-4 py-2 bg-brand-muted hover:bg-brand-muted-hover text-brand-light rounded-lg transition">
                @Model.NoText
            </button>

            <button type="button"
                    class="confirm-popup px-4 py-2 bg-brand-danger hover:bg-brand-danger-hover text-brand-light rounded-lg transition"
                    data-endpoint="@Model.YesAction"
                    data-redirect="@Model.RedirectAftersuccess">
                @Model.YesText
            </button>
        </div>
    </div>
</div>
