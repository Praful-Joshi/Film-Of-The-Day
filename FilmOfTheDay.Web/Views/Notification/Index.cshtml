@model FilmOfTheDay.Web.Models.Notification.NotificationViewModel

@{
    ViewData["Title"] = "Notifications";
}

<div class="w-full mx-auto py-4">
    <!-- Empty State -->
    @if (Model.Notifications == null || !Model.Notifications.Any())
    {
        <div class="max-w-3xl mx-auto">
            <p class="flex justify-center text-gray-500">No new notifications.</p>
        </div>
    }
    else
    {
        <ul class="bg-gray-800">
            @foreach (var notif in Model.Notifications)
            {
                <li class="flex items-center justify-between p-4 hover:bg-gray-700 transition">

                    <!-- Left side: Avatar + message -->
                    <div class="flex items-center space-x-3">
                        <!-- User avatar -->
                        <img src="~/images/profile-placeholder.png"
                            class="w-10 h-10 rounded-full object-cover" />

                        <div class="flex flex-col">
                            <span class="text-sm text-gray-300">
                                @notif.Message
                            </span>

                            <span class="text-xs text-gray-500">
                                @notif.CreatedAt.ToLocalTime().ToString("MMM d, h:mm tt")
                            </span>
                        </div>
                    </div>

                    <!-- Right side: View button -->
                    @if (!string.IsNullOrEmpty(notif.Link))
                    {
                        <form asp-controller="Notification"
                            asp-action="MarkAsRead"
                            method="post"
                            class="inline">
                            <input type="hidden" name="id" value="@notif.Id" />
                            <input type="hidden" name="redirectUrl" value="@notif.Link" />
                            <button type="submit"
                                    class="text-blue-600 text-sm hover:underline whitespace-nowrap bg-transparent border-none p-0 cursor-pointer">
                                View
                            </button>
                        </form>
                    }
                </li>
            }
        </ul>
    }
</div>
