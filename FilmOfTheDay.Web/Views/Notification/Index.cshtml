@model FilmOfTheDay.Web.Models.Notification.NotificationViewModel

@{
    ViewData["Title"] = "Notifications";
}

<div class="max-w-2xl mx-auto px-4 py-6">
    <!-- Empty State -->
    @if (Model.Notifications == null || !Model.Notifications.Any())
    {
        <div class="max-w-3xl mx-auto">
            <p class="flex justify-center text-gray-500">No new notifications.</p>
        </div>
    }
    else
    {
        <ul class="divide-y divide-gray-200 bg-white rounded-xl shadow-sm">
            @foreach (var notif in Model.Notifications)
            {
                <li class="flex items-center justify-between p-4 hover:bg-gray-50 transition">

                    <!-- Left side: Avatar + message -->
                    <div class="flex items-center space-x-3">
                        <!-- User avatar -->
                        <img src="~/images/profile-placeholder.png"
                             class="w-10 h-10 rounded-full object-cover" />

                        <div class="flex flex-col">
                            <span class="text-sm text-gray-800">
                                @notif.Message
                            </span>

                            <span class="text-xs text-gray-500">
                                @notif.CreatedAt.ToLocalTime().ToString("MMM d, h:mm tt")
                            </span>
                        </div>
                    </div>

                    <!-- Right side: Optional link or action -->
                    @if (!string.IsNullOrEmpty(notif.Link))
                    {
                        <a href="@notif.Link"
                           class="text-blue-600 text-sm hover:underline whitespace-nowrap">
                            View
                        </a>
                    }
                </li>
            }
        </ul>
    }
</div>
