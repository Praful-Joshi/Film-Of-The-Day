@model FilmOfTheDay.Web.Models.Profile.ProfileViewModel
@using System.Security.Claims
@using FilmOfTheDay.Web.Services.Interfaces;
@using FilmOfTheDay.Web.Models.Post;

@{
    ViewData["Title"] = "Profile";
    var loggedInUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isOwner = loggedInUserId == Model.UserID.ToString();
}

<div class="max-w-5xl mx-auto pt-4">

    <!-- Profile Header -->
    <div class="flex flex-row items-center gap-6 px-4 flex-wrap">
        <img src="~/images/profile-placeholder.png" 
             class="rounded-full w-20 h-20 object-cover" 
             alt="Profile Picture" />

        <div class="flex-1">
            <div class="flex items-center gap-3">
                <h2 class="text-2xl font-bold text-brand-light">@Model.UserName</h2>
                @* ===============================
                FRIENDSHIP BUTTON SECTION
                =============================== *@
                @if (!isOwner)
                {
                    <form method="post"
                        class="inline text-sm friendship-form"
                        asp-antiforgery="true"
                        id="friendshipForm">
                        @Html.AntiForgeryToken()

                        @* Common hidden input that changes depending on state *@
                        <input type="hidden" name="otherId" value="@Model.UserID" />

                        @switch (Model.friendshipState)
                        {
                            case FriendshipState.None:
                                <button formaction="@Url.Action("SendRequest", "Connection")"
                                        class="friend-btn px-3 mb-1 py-1.5 font-semibold text-brand-light bg-brand-blue hover:bg-brand-blue-hover rounded-full shadow-sm active:scale-95 transition-transform duration-150">
                                    Add Friend
                                </button>
                                break;

                            case FriendshipState.RequestSent:
                                <button disabled
                                        class="friend-btn px-3 mb-1 py-1.5 font-semibold text-brand-light bg-brand-blue rounded-full shadow-sm transition-transform duration-150 opacity-80">
                                    Requested
                                </button>
                                break;

                            case FriendshipState.RequestReceived:
                                <button formaction="@Url.Action("AcceptRequest", "Connection")"
                                        class="friend-btn px-3 mb-1 py-1.5 font-semibold text-brand-light bg-brand-blue hover:bg-brand-blue-hover rounded-full shadow-sm active:scale-95 transition-transform duration-150">
                                    Accept Request
                                </button>
                                break;

                            case FriendshipState.Friends:
                                <button type="button"
                                        class="friend-btn px-3 mb-1 py-1.5 font-semibold text-brand-light bg-brand-blue hover:bg-brand-blue-hover rounded-full shadow-sm active:scale-95 transition-transform duration-150"
                                        data-popup-target="removeFriendPopup">
                                    Friends
                                </button>

                                @await Component.InvokeAsync("ConfirmPopup", new ConfirmPopupViewModel
                                {
                                    PopupId = "removeFriendPopup",
                                    Title = "Remove friend?",
                                    Message = $"Are you sure you want to remove {Model.UserName} from your friends list?",
                                    YesText = "Yes, remove",
                                    NoText = "Cancel",
                                    YesAction = Url.Action("RemoveFriend", "Connection", new { otherId = Model.UserID }),
                                    RedirectAftersuccess = Url.Action("Index", "Home")
                                })
                                break;
                        }
                    </form>
                }

            </div>

            <p class="text-brand-muted">@Model.Email</p>

            <div class="flex gap-6 mt-3 text-brand-light">
                <div><strong>@Model.PostCount</strong> Posts</div>
                <div><strong>@Model.FriendsCount</strong> Friends</div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="flex justify-center border-b border-gray-700 pt-4">
        <button class="tab-btn text-brand-light font-medium py-2 px-4"
                onclick="showTab('posts')">Posts</button>

        @if (isOwner)
        {
            <button class="tab-btn text-brand-muted font-medium py-2 px-4"
                    onclick="showTab('saved')">Saved</button>
        }
    </div>


    <!-- Posts Tab -->
    <div id="posts" class="tab-content grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4">
        @if (Model.Posts.Any())
        {
            foreach (var post in Model.Posts)
            {
                <div class="cursor-pointer overflow-hidden border aspect-square"
                    onclick="window.location.href='/post/viewpost?id=@post.Id'">
                    <img src="@post.ImageUrl"
                        class="w-full h-full object-cover transition-transform duration-300 hover:scale-105" />
                </div>

            }
        }
        else
        {
            <p class="col-span-full text-center text-brand-muted mt-4">No posts yet.</p>
        }
    </div>

    <!-- Saved Tab -->
    @if (isOwner)
    {
        <div id="saved" class="tab-content hidden text-center text-brand-muted mt-4">
            Saved posts will appear here.
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/pages/profile.js" defer></script>
}

