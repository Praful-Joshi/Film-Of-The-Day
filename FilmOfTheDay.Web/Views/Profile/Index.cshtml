@model FilmOfTheDay.Web.Models.Profile.ProfileViewModel
@using System.Security.Claims
@using FilmOfTheDay.Web.Services.Implementations;

@{
    ViewData["Title"] = "Profile";
    var loggedInUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isOwner = loggedInUserId == Model.UserID.ToString();
}

<div class="max-w-5xl mx-auto px-4 py-8 space-y-6">

    <!-- Profile Header -->
    <div class="flex flex-row items-center gap-6 flex-wrap">
        <img src="~/images/profile-placeholder.png" 
             class="rounded-full w-28 h-28 object-cover" 
             alt="Profile Picture" />

        <div class="flex-1">
            <div class="flex items-center gap-3">
                <h2 class="text-2xl font-bold text-gray-800">@Model.UserName</h2>

                @* Follow button visible only when viewing someone else's profile *@
                @if (!isOwner)
                {
                    <form asp-controller="Connection"
                        asp-action="SendRequest"
                        method="post"
                        class="inline follow-form"
                        asp-antiforgery="true">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="receiverId" value="@Model.UserID" />

                        @{
                                var buttonText = "Add Friend";
                                var buttonClass = "bg-blue-500 hover:bg-blue-600";
                                var disabled = "";
                                var isAcceptAction = false; // whether button should call AcceptRequest

                                switch (Model.friendshipState)
                                {
                                    case FriendshipState.RequestSent:
                                        buttonText = "Requested";
                                        disabled = "disabled";
                                        break;
                                    case FriendshipState.Friends:
                                        buttonText = "Friends";
                                        disabled = "disabled";
                                        break;
                                    case FriendshipState.RequestReceived:
                                        buttonText = "Accept Request";
                                        buttonClass = "bg-green-600 hover:bg-green-700";
                                        isAcceptAction = true;
                                        break;
                                }
                        }

                        @if (isAcceptAction)
                        {
                            <button type="button"
                                    id="followBtn"
                                    data-receiver="@Model.UserID"
                                    class="px-3 mb-1 py-1.5 text-sm font-semibold text-white rounded-full shadow-sm active:scale-95 transition-transform duration-150 @buttonClass">
                                @buttonText
                            </button>
                        }
                        else
                        {
                            <button type="submit"
                                    id="followBtn"
                                    class="px-3 mb-1 py-1.5 text-sm font-semibold text-white rounded-full shadow-sm active:scale-95 transition-transform duration-150 @buttonClass"
                                    @disabled>
                                @buttonText
                            </button>
                        }
                    </form>
                }

            </div>

            <p class="text-gray-500">@Model.Email</p>

            <div class="flex gap-6 mt-3 text-gray-700">
                <div><strong>@Model.PostCount</strong> Posts</div>
                <div><strong>@Model.FriendsCount</strong> Friends</div>
                <div><strong>@Model.SavedCount</strong> Saved</div>
            </div>
        </div>
    </div>

    <hr class="border-gray-300" />

    <!-- Tabs -->
    <div class="flex justify-center space-x-4 border-b border-gray-200">
        <button class="tab-btn text-gray-600 font-medium py-2 px-4 border-b-2 border-blue-600"
                onclick="showTab('posts')">Posts</button>

        @if (isOwner)
        {
            <button class="tab-btn text-gray-600 font-medium py-2 px-4 border-b-2 border-transparent"
                    onclick="showTab('saved')">Saved</button>
        }
    </div>

    <!-- Posts Tab -->
    <div id="posts" class="tab-content grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mt-4">
        @if (Model.Posts.Any())
        {
            foreach (var post in Model.Posts)
            {
                <div class="cursor-pointer rounded-lg overflow-hidden shadow hover:shadow-lg transition"
                     onclick="window.location.href='/post/viewpost?id=@post.Id'">
                    <img src="@post.ImageUrl" class="w-full h-40 object-cover rounded-t-lg" />
                    <div class="text-center p-2 bg-white">
                        <h6 class="text-sm font-medium text-gray-800">@post.Title</h6>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="col-span-full text-center text-gray-500 mt-4">No posts yet.</p>
        }
    </div>

    <!-- Saved Tab -->
    @if (isOwner)
    {
        <div id="saved" class="tab-content hidden text-center text-gray-500 mt-4">
            Saved posts will appear here.
        </div>
    }
</div>

@section Scripts {
<script>
    function showTab(tabName) {
        const tabButtons = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');

        tabButtons.forEach(btn => {
            btn.classList.remove('border-blue-600', 'text-gray-800', 'font-bold');
            btn.classList.add('text-gray-600', 'border-transparent');
        });

        tabContents.forEach(tab => tab.classList.add('hidden'));

        const activeButton = Array.from(tabButtons).find(btn =>
            btn.getAttribute('onclick').includes(tabName)
        );
        activeButton.classList.remove('border-transparent', 'text-gray-600');
        activeButton.classList.add('border-blue-600', 'text-gray-800', 'font-bold');

        document.getElementById(tabName).classList.remove('hidden');
    }
    
    document.addEventListener("DOMContentLoaded", function () {
        const followForm = document.querySelector(".follow-form");
        const followBtn = document.getElementById("followBtn");

        if (followForm && followBtn) {
            // If the button is a plain button (Accept Request), handle click separately
            if (followBtn.type === 'button') {
                followBtn.addEventListener('click', async function () {
                    const senderId = followBtn.getAttribute('data-receiver'); // the profile user sent the request
                    const receiverId = '@loggedInUserId'; // current user

                    followBtn.disabled = true;
                    followBtn.textContent = 'Accepting...';

                    try {
                        const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                        const res = await fetch('/Connection/AcceptRequest', {
                            method: 'POST',
                            credentials: 'same-origin',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': token || ''
                            },
                            body: JSON.stringify({ senderId: parseInt(senderId), receiverId: parseInt(receiverId) })
                        });

                        if (res.ok) {
                            followBtn.textContent = 'Friends';
                            followBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
                            followBtn.classList.add('bg-gray-400');
                        } else {
                            followBtn.textContent = 'Error';
                            followBtn.disabled = false;
                        }
                    } catch (err) {
                        console.error('Accept request failed:', err);
                        followBtn.textContent = 'Try Again';
                        followBtn.disabled = false;
                    }
                });
            }

            // Handle regular follow form submit (sending a request)
            followForm.addEventListener("submit", async function (e) {
                e.preventDefault();

                followBtn.disabled = true;
                followBtn.textContent = "Sending...";

                const formData = new FormData(followForm);

                try {
                    // Ensure we have a URL (fallback to explicit controller route)
                    const url = followForm.action && followForm.action.length > 0 ? followForm.action : '/Connection/SendRequest';

                    const response = await fetch(url, {
                        method: "POST",
                        body: formData,
                        credentials: 'same-origin', // send cookies for auth
                        headers: {
                            "X-Requested-With": "XMLHttpRequest"
                        }
                    });

                    if (response.ok) {
                        followBtn.textContent = "Requested";
                    } else {
                        followBtn.textContent = "Error";
                        followBtn.disabled = false;
                    }
                } catch (err) {
                    console.error("Follow request failed:", err);
                    followBtn.textContent = "Try Again";
                    followBtn.disabled = false;
                }
            });
        }
    });
</script>
}
