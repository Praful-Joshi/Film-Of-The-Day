@{
    ViewData["Title"] = "Profile";
}

<link rel="stylesheet" href="~/css/profile.css" />

<div class="container mt-4">
    <div class="profile-header d-flex align-items-center gap-4">
        <img src="~/images/profile-placeholder.png" class="rounded-circle profile-pic" width="120" height="120" />
        <div>
            <h2>@User.Identity?.Name</h2>
            <p class="text-muted">@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</p>
            <div class="d-flex gap-4 mt-2">
                <div><strong>10</strong> Posts</div>
                <div><strong>24</strong> Friends</div>
                <div><strong>5</strong> Saved</div>
            </div>
        </div>
    </div>

    <hr />

    <div class="tabs text-center">
        <button class="tab-btn active" onclick="showTab('posts')">Posts</button>
        <button class="tab-btn" onclick="showTab('saved')">Saved</button>
    </div>

    <!-- Default: Posts visible -->
    <div id="posts" class="tab-content active">
        <div class="row g-3 mt-3">
            @for (int i = 0; i < 6; i++)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm border-0">
                        <img src="https://picsum.photos/300?random=@i" class="card-img-top rounded" />
                        <div class="card-body p-2">
                            <h6 class="card-title text-center">Film Post @i</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Hidden initially -->
    <div id="saved" class="tab-content">
        <p class="text-center text-muted mt-4">Saved posts will appear here.</p>
    </div>
</div>

@section Scripts {
<script>
function showTab(tabName) {
    // Remove 'active' from all tabs and buttons
    document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
    document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));

    // Add 'active' to the selected button and its content
    document.querySelector(`[onclick="showTab('${tabName}')"]`).classList.add('active');
    document.getElementById(tabName).classList.add('active');
}
</script>
}
