@model FilmOfTheDay.Web.Models.Profile.ProfileViewModel
@using System.Security.Claims
@using FilmOfTheDay.Web.Services.Interfaces;
@using FilmOfTheDay.Web.Models.Popup;

@{
    ViewData["Title"] = "Profile";
    var loggedInUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isOwner = loggedInUserId == Model.UserID.ToString();
}

<div class="max-w-5xl mx-auto pt-4">

    <!-- Profile Header -->
    <div class="flex flex-row items-center gap-6 px-4 flex-wrap">
        <img src="~/images/profile-placeholder.png" 
             class="rounded-full w-20 h-20 object-cover" 
             alt="Profile Picture" />

        <div class="flex-1">
            <div class="flex items-center gap-3">
                <h2 class="text-2xl font-bold text-brand-light">@Model.UserName</h2>
                @if (!isOwner)
                {
                    @await Component.InvokeAsync("FriendshipButton", Model)
                }
            </div>

            <p class="text-brand-muted">@Model.Email</p>

            <div class="flex gap-6 mt-3 text-brand-light">
                <div><strong>@Model.PostCount</strong> Posts</div>
                @if(isOwner)
                {
                    <div>
                        <a asp-controller="Connection"
                        asp-action="Index"
                        asp-route-id="@Model.UserID"
                        class="hover:text-brand-link">
                            <strong>@Model.FriendsCount</strong> Friends
                        </a>
                    </div>
                }
                else
                {
                    <div><strong>@Model.FriendsCount</strong> Friends</div>
                }
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="flex justify-center border-b border-gray-700 pt-4">
        <button class="tab-btn text-brand-light font-medium py-2 px-4"
                onclick="showTab('posts')">Posts</button>

        @if (isOwner)
        {
            <button class="tab-btn text-brand-muted font-medium py-2 px-4"
                    onclick="showTab('saved')">Saved</button>
        }
    </div>


    <!-- Posts Tab -->
    <div id="posts" class="tab-content grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4">
        @if (Model.Posts.Any())
        {
            foreach (var post in Model.Posts)
            {
                <div class="cursor-pointer overflow-hidden border aspect-square"
                    onclick="window.location.href='/post/viewpost?id=@post.Id'">
                    <img src="@post.ImageUrl"
                        class="w-full h-full object-cover transition-transform duration-300 hover:scale-105" />
                </div>

            }
        }
        else
        {
            <p class="col-span-full text-center text-brand-muted mt-4">No posts yet.</p>
        }
    </div>

    <!-- Saved Tab -->
    @if (isOwner)
    {
        <div id="saved" class="tab-content hidden text-center text-brand-muted mt-4">
            Saved posts will appear here.
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/pages/profile.js" defer></script>
}

